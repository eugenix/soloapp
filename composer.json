{
    "name": "solo/app",
	"type": "application",
	"description": "Solo framework app skeleton",
	"keywords": [ "application","solo framework" ],
	"homepage": "http://github.com/",
	"license": "MIT",

    "authors": [
        {
            "name": "Eugene Kurbatov",
            "email": "ekur@i-loto.ru",
	        "role": "Developer"
        }
    ],

	"require": {
		"php": ">=5.3.0",
		"smarty/smarty": "3.1.*",
		"solo/framework": "3.0"
	},


	"autoload": {
		"psr-0": {
			"App": "src/",
			"Solo": "vendor/solo/framework"
		}
	},

	"minimum-stability": "dev",

	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "smarty/smarty",
				"version": "3.1.13",
				"dist": {
					"url": "http://www.smarty.net/files/Smarty-3.1.13.zip",
					"type": "zip"
				},
				"autoload": {
					"classmap": [ "libs/Smarty.class.php" ]
				}
			}
		},

		{
			"type": "package",
			"package": {
				"name": "solo/framework",
				"version": "3.0",
				"source": {
					"url": "https://github.com/solo-framework/solo-framework.git",
					"type": "git",
					"reference": "revolution"
				},
				"autoload": {
					"psr-0":  { "Solo": "" }
				}
			}
		}
	]
}
